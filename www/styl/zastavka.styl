.zastavka
    position absolute
    top 0px
    left -100%
    bottom 0px
    width calc(100% \- 410px)
    background white
    z-index 5000
    &.active
        left 0px
    .closebtn
        position absolute
        top 14px
        left 14px
        width 30px
        height 30px
        text-align center
        border 1px solid black
        line-height @height
        background #eee
        &:hover
            background #ddd
            cursor pointer
    h1
        margin-left 260px
        margin-top 20px
    .lineSelector
        position absolute
        top 10px
        left 80px
        width 160px
    .closeLinesSelector
        position absolute
        top 58px
        left 260px
        &.off
            display none

    .prujezdyDayLegend
        position absolute
        top 95px
        left 15px
        width 30px
        bottom 15px
        border 1px solid #aaa
        border-right 0px none
        overflow-x scroll
        .day
            position absolute
            right 5px
            font-size 0.8em
            height (93% / 31)
            margin-top -20%
            // background red
    .prujezdyScatter
        position absolute
        top 95px
        left 45px
        bottom 15px
        width calc(100% \- 60px)
        border 1px solid #aaa
        border-left 0px none
        overflow-x auto
        overflow-y hidden
        .time
            position absolute
            bottom 0px
            width 60px
            margin-left (@width * -0.5)
            text-align center
        .group
            height (93% / 31)
            margin-top (93% / 31 * -0.5)
            position absolute
            border-left 1px solid red
            border-right 2px solid #aaf
            background #eef
            z-index 1
            opacity 0.6
            &.twominute
                background #afa
                border-right-color #00f
            &.threeminute
                background #ffa
            &.fourminute
                background #faa
            &:hover
                background #faa
                background #00f
                cursor pointer
                z-index 2
        .multi-group
            position absolute
            height 7px
            width 7px
            border-radius 50%
            background red
            z-index 1
            opacity 0.5
            &.mg-1
                background #0f0
            &.mg-2
                background #00f
            &.mg-3
                background #0ff
            &.mg-4
                background #f0f
            &.mg-5
                background #ff0
            &:hover
                opacity 1
                z-index 2
                width 9px
                height 9px
                border 1px solid #666
                cursor pointer
            &.selected
                width 11px
                height 11px
                border 2px solid black
                opacity 1
